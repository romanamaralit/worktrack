<%- include('../partials/header') %>
<table id="list">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Semester</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% works.forEach(function(w) { %>
      <% if (user && user._id.equals(w.user)) { %>
      <tr>
        <form action="/works/<%= w._id%>?_method=DELETE"
            class="delete-form" method="POST">
            <button type="submit">X</button>
          </form>
        <td><%= w.subject %></td>
        <td><%= w.semester %></td>
        <td><a href="/works/<%= w._id%>">WORKTRACK</a></td>
      </tr>
      <% }; %>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>